<body>
    <center>
        <img src="https://www.softtoyshop.com.au/pub/media/logo/stores/1/soft-toy-shop-logo-wide.png" class="cangiua">
    </center>
    <div class="container">
        <h2>New Toys</h2>
        <form action="/doInsert" method="post">
            <div class="form-group">
                <label for="usr">Toys Name:</label>
                <input type="text" class="form-control" name="txtName">
            </div>
            <div class="form-group">
                <label for="usr">Toys Price:</label>
                <input type="text" class="form-control" name="txtPrice">
            </div>
            <div class="form-group">
                <label for="usr">Age:</label>
                <input type="text" class="form-control" name="txtAge">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
        <tr>
            <a href="/">Home</a>
        </tr>
        {{>footer}}
    </div>
    
